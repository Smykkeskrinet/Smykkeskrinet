  .h2_blue {
    color: #1b72d0;
    font-size: 35px;
    font-family: orbitron;
    padding-bottom: 1rem;
  }

  .ikoner {
    width: 10%;
    margin-top: 1rem;
  }

  .p_grey {
    color: #3c3636;
    font-family: poppins;
    font-size: 14px;
  }

  .h2_grey {
    color: #3c3636;
    font-size: 35px;
    font-family: orbitron;
    padding-bottom: 1rem;
  }

  .h2_pink {
    color: #f9f2f2;
    font-size: 35px;
    font-family: orbitron;
    padding-bottom: 1rem;
  }

  .p_pink {
    color: #f9f2f2;
    font-family: poppins;
    font-size: 14px;
  }

  .leftbox {
    background-color: #f9f2f2;
    margin-bottom: 40px;
  }

  .text {
    padding: 22px;
    max-width: 650px;
  }

  .grid2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 7px;
  }

  .leftbox1 {
    background-color: #3c3636;
    margin-bottom: 40px;
  }

  img {
    width: 100%;
  }

  @media (min-width: 700px) {
    .leftbox {
      display: grid;
      grid-template-columns: 1fr 1fr;
      background-color: transparent;
      margin-bottom: 60px;
      padding: 20px;
    }

    .leftbox1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
