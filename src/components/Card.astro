---
const { navn, brand, pris, billede } = Astro.props;
import Button from "../components/Button.astro";
// console.log(data);
---

<article>
  <div>
    <img src={billede} alt="billede" height="460" width="430" />
    <h3>
      {navn}
    </h3>
    <p>{brand}</p>
    <p>{pris}</p>
    <br />
  </div>
  <Button label="Se mere"/>
</article>

<style>

article {
  width: 300px; /* Bredden på kortet */
  border: 1px solid #ccc; /* Tynder grænse */
  
  overflow: hidden; /* Skjuler overløb */
  background-color: #f9f9f9; /* Baggrundsfarve */
  
  text-align: center; /* Centrerer tekst */
  font-family: Arial, sans-serif; /* Standard skrifttype */
}

article img {
  width: 100%; /* Billede fylder hele bredden */
  height: auto; /* Bevarer billedets proportioner */
}

article div {
  padding: 16px; /* Indrykning indenfor boksen */
}

article h3 {
  font-size: 1.2rem;
  margin: 8px 0; /* Tilføjer afstand over og under */
  font-weight: bold; /* Fremhæver navnet */
}

article p {
  margin: 4px 0; /* Lidt afstand mellem tekst */
  font-size: 1rem; /* Standard tekststørrelse */
}

article p:last-of-type {
  color: #007bff; /* Blå tekstfarve til pris */
  font-weight: bold; /* Fremhævet pris */
}



  @media screen and (max-width: 768px) {
    li {
      max-width: 200px;
    }
  }
</style>
