<header class="header">
    <nav>
        <!-- Logo -->
        <a href="index.astro"><img src="../img/logo.png" alt="logo" class="logodesk" /></a>

        <!-- Ikoner -->
        <div class="icons-container">
            <a href="index.astro"><img src="../img/search.svg" alt="search" class="ikon" /></a>
            <a href="index.astro"><img src="../img/shoppingbag.svg" alt="shopping bag" class="ikon" /></a>
        </div>

        <!-- Menu Button -->
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>

        <!-- Menu Links -->
        <ul class="menu">
            <li><a href="produktliste.astro">SMYKKER</a></li>
