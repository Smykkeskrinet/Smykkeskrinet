---
import "../styles/style.css";
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
</head>

<section>
  <footer class="grid2">
    <div>
      <div class="leftside">
        <div class="info">
          <h3>ADRESSE</h3>
          <p>St. Torvegade 2, Rønne 3700</p>
        </div>

        <div class="info">
          <h3>ÅBNINGSTIDER</h3>
          <p>Mandag til fredag: 10.00 - 17.30</p>
          <p>Lørdag: 09.30 - 13.00</p>
          <p>Søndag: Lukket</p>
        </div>

        <div class="info">
          <h3>KONTAKT OS</h3>
          <p>Tlf. 56 95 90 90</p>
          <p>Mail: sn@sussie-smykkeskrin.dk</p>
        </div>
      </div>
      <div>
        <a href="https://www.facebook.com/smykkeskrinetbornholm" target="blank">
          <img src="../../img/facebook_pink.svg" alt="facebook" class="ikoner" />
        </a>
        <a href="https://www.instagram.com/smykkeskrinet_bornholm/" target="blank">
          <img src="../../img/instagram_pink.svg" alt="instagram" class="ikoner" />
        </a>
      </div>
    </div>
    <div>
      <div class="rightside">
        <div class="smykkeskrinet">
          <h2>SMYKKESKRINET</h2>
        </div>
        <img src="../../img/personalet.webp" alt="hero" />
        <!-- Lottie animation -->
        <div id="logo-animation" class="lottie-logo"></div>
      </div>
    </div>
  </footer>

  <div class="rettigheder">
    <img src="../../img/betalingsmetoder.svg" alt="betalingsmetoder" class="betalingsmetoder" />
    <p class="rettigheder">© 2024 Smykkeskrinet. Alle rettigheder forbeholdt.</p>
  </div>
</section>

<style>
  section {
    background-color: #3c3636;
    padding: 7%;
  }

  .ikoner {
    width: 12%;
    margin-top: 10px;
  }

  h3 {
    color: #f9f2f2;
    font-family: orbitron;
    font-size: 15px;
  }

  h2 {
    color: #1b72d0;
    font-size: 8.5vw;
    font-family: orbitron;
  }

  p {
    font-size: 13px;
  }

  .info {
    padding-bottom: 2rem;
    font-family: poppins;
    color: #f9f2f2;
  }

  .smykkeskrinet {
    padding-top: 1rem;
    padding-bottom: 2rem;
  }

  .rettigheder {
    padding-top: 2rem;
    font-size: 10px;
    text-align: center;
    font-family: poppins;
    color: #f9f2f2;
  }

  img {
    width: 100%;
  }

  .lottie-logo {
    width: 150px; /* Justér bredde */
    height: 150px; /* Justér højde */
    margin: auto;
  }

  .lottie-logo {
  width: 150px;
  height: 150px;
}


  /* DESKTOP */
  @media (min-width: 700px) {
    .grid2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .lottie-logo {
  width: 150px;
  height: 150px;
}

    img {
      width: 100%;
    }

    h3 {
      color: #f9f2f2;
      font-family: orbitron;
      font-size: 20px;
    }

    h2 {
      color: #1b72d0;
      font-size: 40px;
      font-family: orbitron;
    }

    p {
      font-size: 15px;
    }

    .info {
      padding-bottom: 2rem;
      font-family: poppins;
      color: #f9f2f2;
    }

    .betalingsmetoder {
      width: 20%;
    }
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.2/lottie.min.js"></script>
<script>
  lottie.loadAnimation({
    container: document.getElementById('logo-animation'),
    renderer: 'svg',
    loop: true,
    autoplay: true,
    path: '../../logoroto.json', 
  });
</script>
