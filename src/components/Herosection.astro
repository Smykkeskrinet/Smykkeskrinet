<head>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
</head>

<div class="herosection">
  <h1>SMYKKESKRINET</h1>

  <div class="hero_imgs">
    <div class="img-hero1">
      <a href="">
        <img src="../img/Hero1.webp" alt="hero1" />
      </a>
    </div>

    <div class="img-hero2">
      <a href="">
        <img src="../img/Hero2.webp" alt="hero2" />
      </a>
    </div>
  </div>

  <img src="../img/shopnu_normal.svg" alt="hero" class="shopnu_knap" />
</div>

<style>
  /*Fjerner det ene billede i mobilversion */
  .img-hero1 {
    display: none;
  }
  .herosection {
    display: flex;
    align-items: center; /* Centrerer lodret */
    justify-content: center; /* Centrerer vandret */
  }

  .herosection h1 {
    position: absolute; /* Placeres over billederne */
    top: 25%;
    color: #1b72d0;
    font-family: orbitron;
    text-align: center;
    font-size: 2.6rem;
    max-width: 100vw; /* Maksimum bredde er skærmbredden */
    overflow: hidden; /* Skjul indhold, der går udenfor sektionen */
  }

  .shopnu_knap {
    width: 30%;
    top: 40%;
    position: absolute;
  }

  .img-hero1 img,
  .img-hero2 img {
    width: 100%; /* Sørg for, at billederne fylder deres grid-celler */
    height: auto;
    object-fit: cover; /* Tilpas billedet uden at forvrænge det */
  }

  /*DESKTOP*/
  @media (min-width: 700px) {
    /*viser begger billeder*/
    .img-hero1,
    .img-hero2 {
      display: block;
      flex: 1; /* Sørg for, at begge billeder deler pladsen ligeligt */
      margin-top: 6%;
    }

    .hero_imgs {
      display: flex;
      width: 100%;
    }

    .herosection h1 {
      font-size: 6rem; /* Større skrift */
      top: 15%; /* Justerer placering */
      margin-top: 8%;
    }

    .shopnu_knap {
      width: 190px;
      top: 60%;
    }
  }
</style>
