<section class="categoryContainer">
  <a class="categoryItem" href="list_earrings">
    <img src="../img/earring4.webp" alt="hero" />
    <h3>ØRERINGE</h3>
  </a>

  <a class="categoryItem" href="list_rings">
    <img src="../img/ringe4.webp" alt="hero" />
